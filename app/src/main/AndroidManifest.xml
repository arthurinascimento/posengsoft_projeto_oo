<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.engsoft.poli.upe.quitandaverdeapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:label="@string/title_activity_splah"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".ProductsActivity"
            android:label="@string/title_activity_products" />

        <provider
            android:name=".providers.QuitandaVerdeContentProvider"
            android:authorities="com.upe.poli.engsoft.quitandaverdeapp.contentprovider" />

        <activity
            android:name=".ProductDetailsActivity"
            android:label="@string/title_activity_product_details" />
        <activity
            android:name=".CartActivity"
            android:label="@string/title_activity_cart" />
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register" />
        <activity android:name=".UserDetailsActivity" android:label="@string/title_activity_account"></activity>
    </application>

</manifest>